<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.UniversitasProfil"
    android:background="@color/colorBack">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorLayerBAck">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/firslayer">

                        <ImageView
                            android:id="@+id/logo"
                            android:layout_width="300px"
                            android:layout_height="300px"
                            android:src="@drawable/ui"
                            android:layout_marginTop="50px"
                            android:layout_marginBottom="50px"/>
                        <TextView
                            android:id="@+id/nama"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:text="nama universitas"
                            android:textColor="@color/colorTitle"/>
                        <TextView
                            android:id="@+id/singkat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            android:textColor="@color/colorTitle"
                            android:layout_marginBottom="50px"
                            android:layout_marginTop="5px"/>



                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="50px"
                    android:paddingTop="70px"
                    android:paddingBottom="70px"
                    android:gravity="center"
                    android:background="@drawable/secondlayer">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jenis"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/ColorTitleWhite"/>
                        <TextView
                            android:id="@+id/jenis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Universitas"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            android:textColor="@color/ColorSubTitleWhite"/>

                    </LinearLayout>
                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:background="@color/colorView"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/ColorTitleWhite"/>
                        <TextView
                            android:id="@+id/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Negeri"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            android:textColor="@color/ColorSubTitleWhite"/>

                    </LinearLayout>
                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20px"
                        android:layout_marginRight="20px"
                        android:background="@color/colorView"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Akreditas"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/ColorTitleWhite"/>
                        <TextView
                            android:id="@+id/akreditas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            android:textColor="@color/ColorSubTitleWhite"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="50px"
                    android:layout_marginLeft="120px">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/alamat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTitle"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="Jalan"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/kota"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTitle"
                                android:textSize="18sp"
                                android:textStyle="normal"
                                android:text="Kota"
                                android:layout_marginRight="4sp"/>
                            <TextView
                                android:id="@+id/provinsi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorTitle"
                                android:textSize="18sp"
                                android:textStyle="normal"
                                android:text="Provinsi"/>

                        </LinearLayout>


                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="20px"
                        android:layout_marginRight="20px"
                        android:layout_marginBottom="10px"
                        android:background="@color/colorHorizontalView"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/website"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTitle"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Website"/>

                        <Button
                            android:id="@+id/maps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="lihat di maps"
                            >

                        </Button>

                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>